<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', {
        title: 'Мої замовлення',
    }); %>

<body>
    <%- include('./partials/navbar',{
        activePage: 'orders'
    }); %>

    <div class="container">
        <h1>
            Мої замовлення
        </h1>
        <% if (orders.length) { %>
        <% orders.forEach(function(order){ %>
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">

                    <div class="card-content">
                        <span class="card-title">Замовлення <small><%= order._id %></small> </span>
                        <p>Дата замовлення: <span class="date"><%= order.date %></span></p>
                        <p class="">
                            <em><%= order.user.userId.name %></em>
                            (<%= order.user.userId.email %>)
                        </p>

                        <ol>
                            <% order.courses.forEach(function(course){ %>
                            <li>
                                <%= course.course.title %> (x <strong><%= course.count %></strong> )
                            </li>
                            <% }); %>
                        </ol>

                        <hr>
                        <p>
                            Ціна:
                            <span class="price">
                                <%= order.price %>
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
        <% }else{ %>
        <p>Замовлень поки що немає</p>
        <% } %>



    </div>
</body>
<script type="text/javascript" src="/price.js"></script>
<script type="text/javascript" src="/date.js"></script>
<%- include('./partials/footer'); %>

</html>