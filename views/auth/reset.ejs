<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', {
    title: 'Скидання пароля',
    }); %>

<body>
    <%- include('../partials/navbar', { activePage: '' }); %>

    <div class="container">
        <div class="auth">
            <div class="row">

                <div class="col s6 offset-s3">
                    <% if (error.length) { %>
                    <p class="alert"><%= error %> </p>
                    <% } %>
                    <h4>Скинути пароль</h4>
                    <form action="/auth/reset" method="POST">
                        <div class="input-field ">
                            <input placeholder="Email" id="email" name="email" type="text" class="validate" required>
                            <label for="email">Email</label>
                            <span class="helper-text" data-error="Введіть email"></span>
                        </div>


                        <input type="hidden" name="_csrf" value="<%= csrf %>">

                        <button type="submit" class="btn btn-primaty">Скинути</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

<%- include('../partials/footer'); %>

</html>